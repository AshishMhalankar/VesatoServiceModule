<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".modules.authentication.OtpVerificationAtivity"
    android:background="@color/colorWhite">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/ed_otp"
        android:layout_marginBottom="50dp"
        android:text="@string/enter_otp"
        android:textSize="20dp"
        android:textColor="@color/colorBlack"/>


    <EditText
        android:id="@+id/ed_otp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@drawable/design_edittext"
        android:padding="10dp"
        android:ems="10"
        android:maxLength="4"
        android:gravity="center"
        android:inputType="number" />

    <TextView
        android:id="@+id/tv_submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ed_otp"
        android:background="@drawable/design_button"
        android:layout_centerHorizontal="true"
        android:text="@string/submit"
        android:layout_marginTop="20dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:textColor="@color/colorWhite"
        android:textSize="20dp"/>

    <TextView
        android:id="@+id/resend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_submit"
        android:background="@drawable/design_button"
        android:layout_centerHorizontal="true"
        android:text="पुन्हा पाठवा"
        android:layout_marginTop="20dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:textColor="@color/colorWhite"
        android:textSize="20dp"/>
</RelativeLayout>